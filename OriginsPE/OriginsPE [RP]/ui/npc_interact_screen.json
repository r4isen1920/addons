  "scroll_box_active": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "alpha": 1.0,
    "propagate_alpha": true,
    "controls": [
      {
        "scroll_box_active": {
          "type": "image",
          "texture": "textures/ui/button_borderless_light",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "size": [ 3, "100%" ]
        }
      }
    ]
  },
  
  "scrolling_panel@common.scrolling_panel": {
    "$scroll_track_offset": [ -14, 0 ],
    "$scroll_track_image_control": "common.empty_panel",
    "$scroll_box_mouse_image_control": "$scroll_box_image_control",
    "$scroll_box_touch_image_control": "$scroll_box_image_control",
    "controls": [
      {
        "scroll_base@npc_interact.scrolling_panel_base": {
          "size": "$scrolling_pane_size",
          "offset": "$scrolling_pane_offset"
        }
      }
    ]
  },
  
  "scrolling_panel_base@common.scrolling_panel_base": {
    "controls": [
      { 
        "$scroll_view_name@common.scroll_view_control": {
          "controls": [
            {
              "panel": {
                "type": "panel",
                "anchor_to": "top_left",
                "anchor_from": "top_left",
                "$view_port_size|default": [ "100%", "100%" ],
                "clips_children": true,
                "controls": [
                  { "viewport@npc_interact.viewport": {} },
                  { "bar_and_track@npc_interact.bar_and_track": {} }
                ]
              }
            }
          ]
        }
      }
    ],
    "$scrolling_panel_base_button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.menu_select",
        "mapping_type": "pressed",
        "button_up_right_of_first_refusal": true
      }
    ]
  },

  "viewport@common.scroll_background_and_viewport": {
    "controls": [
      {
        "scrolling_view_port": {
          "layer": 1,
          "type": "panel",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": "$scroll_view_port_offset",
          "size": "$scroll_view_port_size",
          "controls": [
            {
              "scrolling_content@$scrolling_content": {
                "layer": 2,
                "$scrolling_content_anchor_from|default": "top_left",
                "$scrolling_content_anchor_to|default": "top_left",
                "anchor_from": "$scrolling_content_anchor_from",
                "anchor_to": "$scrolling_content_anchor_to"
              }
            }
          ]
        }
      }
    ]
  },
  
  "bar_and_track@common.scroll_bar_and_track": {
    "size": "$scrolling_pane_size",
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      {
        "centered_panel": {
          "type": "panel",
          "size": "$scroll_size",
          "anchor_from": "$bar_and_track_anchor_from",
          "anchor_to": "$bar_and_track_anchor_to",
          "$bar_side|default": "scroll_right",
          "offset": "$scroll_track_offset",
          "variables": [
            {
              "requires": "($bar_side = scroll_left)",
              "$bar_and_track_anchor_from": "top_left",
              "$bar_and_track_anchor_to": "top_left"
            },
            {
              "requires": "($bar_side = scroll_right)",
              "$bar_and_track_anchor_from": "top_right",
              "$bar_and_track_anchor_to": "top_right"
            }
          ],
          "controls": [
            {
              "track@common.scrollbar_track": {
                "layer": 20,
                "anchor_from": "center",
                "anchor_to": "center"
              }
            },
            {
              "scroll_box@common.scroll_box": {
                "layer": 25,
                "anchor_from": "center",
                "anchor_to": "center"
              }
            }
          ]
        }
      }
    ]
  },
  
  "origin_description_content": {
    "type": "stack_panel",
    "orientation": "vertical",
    "layer": 1,
    
    "$race_description|default": "origins.race.human.description",
    "$race_traits|default": "none",
    "variables": [
      {
        "requires": "($race_traits = 'origin.none')",
        "$race_traits_description": "origins.trait.none"
      },
      {
        "requires": "($race_traits = 'origin.random')",
        "$race_traits_description": "origins.trait.random"
      },
      {
        "requires": "(not ($race_traits = 'origin.none') and not ($race_traits = 'origin.random'))",
        "$race_traits_description": "origins.trait.has",
        "$set_color": "$6_color_format"
      }
    ],
    "controls": [
      { 
        "scroller_control@common.button": {
          "size": [ "100%", 1 ],
          "sound_volume": 0.0,
          "$pressed_button_name": "unset"
        } 
      },
      {
        "race_brief_description": {
          "type": "label",
          "size": [ "100%", "default" ],
          "shadow": true,
          "text": "$race_description",
          "localize": true
        }
      },
      { 
        "padding": {
          "type": "panel",
          "size": [ "100%", 10 ] 
        }
      },
      {
        "race_traits_label": {
          "type": "label",
          "size": [ "100%", "default" ],
          "shadow": true,
          "$set_color|default": "$7_color_format",
          "color": "$set_color",
          "text": "$race_traits_description",
          "localize": true
        }
      },
      {
        "race_traits_list@$race_traits": {
          "size": [ "100%", "100%c" ]
        }
      },
      { 
        "footer@common.button": {
          "size": [ "100%", 11 ],
          "sound_volume": 0.0,
          "$pressed_button_name": "unset"
        }
      }
    ]
  },
  
